doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title Express Gallery
    link(rel="stylesheet" type="text/css" href="/styles/styles.css")
  body
    div(class="mainContent")
      hr(class="dotted")
      div(class="topBar")
        div(class="headerDiv")
          h1(class="header1") _ARCHITEKT
        div(class="headerPDiv")
          p(class="headerP") Welcome to our online portfolio, we are small group of passionate designers and architects, looking to change and create amazing digital images to inspire others to follow in our innovative steps. Free Architect WordPress Theme
      div(class="mainImg")
        a(href="gallery/" + Gallery[0].id)
          img(class="mainImage" src=Gallery[0].url)
      hr(class="line")
      div(class="row2")
        -var pics = 1
        while pics < Gallery.length
          div(class="rowPics")
            // span= pics%3
            a(href="gallery/" + Gallery[pics].id)
              img(src=Gallery[pics].url)
            div(class="picPara")
              p(class="authorP") #{Gallery[pics].author}
              p(class="urlP") #{Gallery[pics].url}
              p(class="descriptP") #{Gallery[pics].description}
          if pics%3 === 0
            hr(class="line")
          -pics++
